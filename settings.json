{
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 0,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/html": true,
        "**/log": true,
        "**/tmp": true
    },
    "[python]": {
        "editor.defaultFormatter": "KevinRose.vsc-python-indent"
    },
    "git.ignoreLimitWarning": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.experimentalInlineEdit.enabled": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.minimap.enabled": true,
    "editor.renderWhitespace": "none",
    "editor.cursorBlinking": "smooth",
    "editor.fontFamily": "Menlo, Monaco, 'Courier New', monospace",
    "editor.fontWeight": "normal",
    "editor.fontSize": 16,
    "workbench.colorTheme": "Live in the Dark",
    "workbench.iconTheme": "catppuccin-perfect-ayu",
    "terminal.integrated.fontFamily": "Courier",
    "terminal.integrated.fontSize": 14,
    "workbench.colorCustomizations": {
        "terminal.background": "#212229",
        "activityBar.foreground": "#FFD700", // Golden color for the active icon
        "activityBar.inactiveForeground": "#FF0000", // Red color for inactive icons
        "activityBarBadge.background": "#FF0000", // Red for activity bar badge background
        "activityBarBadge.foreground": "#FFD700", // Golden for badge text
        "editorBracketHighlight.foreground1": "#ff0000",
        "editorBracketHighlight.foreground2": "#00ff00",
        "editorBracketHighlight.foreground3": "#0000ff",
        "editorBracketHighlight.foreground4": "#ff8000",
        "editorBracketHighlight.foreground5": "#8000ff",
        "editorBracketHighlight.foreground6": "#00ff80",
        "editorBracketHighlight.unexpectedBracket.foreground": "#ff0000",
        "editorGutter.modifiedBackground": "#00ff00",
        "editorGutter.addedBackground": "#0000ff",
        "editorGutter.deletedBackground": "#ff0000",
        "diffEditor.insertedTextBackground": "#0000ff30",
        "diffEditor.removedTextBackground": "#ff000030",
        "statusBar.background": "#650404",
        "statusBar.foreground": "#FFFFFF",
        "statusBar.noFolderBackground": "#000000",
        "statusBar.noFolderForeground": "#710c0c",
        "statusBar.debuggingBackground": "#000000",
        "statusBar.debuggingForeground": "#b41b1b",
        "statusBarItem.remoteBackground": "#b86d0a",
        "statusBarItem.remoteForeground": "#000000",
        "sideBar.background": "#1e1e1e",
        "sideBar.foreground": "#FFFFFF",
        "sideBarSectionHeader.background": "#2a2a2a",
        "sideBarSectionHeader.foreground": "#FFFFFF",
        "sideBarTitle.foreground": "#FFFFFF",
        "editor.overlayBackground": "rgba(200, 200, 200, 0.03)"
    }
}
